<?xml version="1.0" encoding="utf-8"?>
<com.qunar.im.ui.view.chatExtFunc.OperationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/edit_region"
    tools:showIn="@layout/atom_ui_activity_chat">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_oprations"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_inicatore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/atom_ui_spacing"
        android:orientation="horizontal" />

</com.qunar.im.ui.view.chatExtFunc.OperationView>